@page

@{
    Layout = "_ZofyaLayout";
    ViewData["Title"] = "Zofya";
}

@section Styles {
    <link rel="stylesheet" href="~/css/zofya_loginpage_style.css"/>
}

<main id="main">
    
    <div class="container-sm container-login">
        <!-- Pills navs -->
        <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
        <li class="nav-item" role="presentation">
            <a
            class="nav-link active"
            id="tab-login"
            data-mdb-toggle="pill"
            href="#pills-login"
            role="tab"
            aria-controls="pills-login"
            aria-selected="true"
            >Login</a>
        </li>
        <li class="nav-item" role="presentation">
            <a
            class="nav-link"
            id="tab-register"
            data-mdb-toggle="pill"
            href="#pills-register"
            role="tab"
            aria-controls="pills-register"
            aria-selected="false"
            >Register</a
            >
        </li>
        </ul>
        <!-- Pills navs -->

        <!-- Pills content -->
        <div class="tab-content">
        <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
            <form class="needs-validation form-login" novalidate>
                <div class="text-center mb-3">
                    <h3 class="brand-zofya brand-zofya-logo">Sign in</h3>
                </div>            

                <!-- Email input -->
                
                <div class="form-outline">
                    <input type="email" id="validationCustom-login-email" class="form-control" required/>
                    <label class="form-label" for="validationCustom-login-email">Email</label>                
                    <div class="invalid-feedback">Invalid email.</div>
                </div>

                <!-- Password input -->
                <div class="form-outline mb-5">
                    <input type="password" id="validationCustom-login-password" class="form-control" required/>
                    <label class="form-label" for="validationCustom-login-password">Password</label>
                    <div class="invalid-feedback">Invalid password.</div>
                </div>           
                

                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>

                <!-- Register buttons -->
                <div class="text-center">
                    <p>Not a member? <a id="register-link" href="#">Register</a></p>
                </div>
            </form>
        </div>
        <div class="tab-pane fade" id="pills-register" role="tabpanel" aria-labelledby="tab-register">
            <form class="needs-validation form-register" novalidate>
            <div class="text-center mb-3">
                <h3 class="brand-zofya brand-zofya-logo">Register</h3>
            </div>      

            <!-- Name input -->
            <div class="form-outline">
                <input type="text" id="validationCustom-register-name" class="form-control" required/>
                <label class="form-label" for="validationCustom-register-name">Name</label>
                <div class="invalid-feedback">Invalid Name.</div>
            </div>

            <!-- Username input -->
            <div class="form-outline">
                <input type="number" id="validationCustom-register-phone" class="form-control" required/>
                <label class="form-label" for="validationCustom-register-phone">Phone</label>
                <div class="invalid-feedback">Invalid Phone.</div>
            </div>

            <!-- Email input -->
            <div class="form-outline">
                <input type="email" id="validationCustom-register-email" class="form-control" required/>
                <label class="form-label" for="validationCustom-register-email">Email</label>
                <div class="invalid-feedback">Invalid Email.</div>
            </div>

            <!-- Password input -->
            <div class="form-outline">
                <input type="password" id="validationCustom-register-password" class="form-control" required/>
                <label class="form-label" for="validationCustom-register-password">Password</label>
                <div class="invalid-feedback">Invalid Password.</div>
            </div>

            <!-- Repeat Password input -->
            <div class="form-outline">
                <input type="password" id="validationCustom-register-repassword" class="form-control" required/>
                <label class="form-label" for="validationCustom-register-repassword">Repeat password</label>
                <div class="invalid-feedback">Invalid Password.</div>
            </div>

            <!-- Checkbox -->
            <div class="form-check d-flex justify-content-center mb-4">
                <input
                class="form-check-input me-2"
                type="checkbox"
                value=""
                id="registerCheck"
                checked
                aria-describedby="registerCheckHelpText"
                />
                <label class="form-check-label" for="registerCheck">
                I have read and agree to the zofya terms
                </label>
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mb-3">Register</button>
            </form>
        </div>
        </div>
        <!-- Pills content -->
    </div>    
</main>

@section Scripts {
    <script src="/js/login.js"></script>
}